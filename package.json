{
  "name": "sefaria-web",
  "version": "1.0.0",
  "description": "Server for rendering React components for Sefaria, a library of Jewish texts.",
  "config": {
    "port": "4040"
  },
  "main": "node/server.js",
  "scripts": {
    "start": "nodemon static/bundles/server-bundle.js",
    "daemon": "forever start -a -p ./ -l log/forever/forever.log -o log/forever/out.log -e log/forever/err.log -w --watchDirectory log/forever/timeout static/bundles/server-bundle.js ",
    "test": "./run reader/browsertest/run_local.py",
    "build": "npm run build:webpack",
    "build:jsx": "babel static/js/s2.jsx > static/js/s2.js",
    "build:webpack": "webpack --config webpack.config.js --display-error-details --progress",
    "build:webpackOld": "webpack — config node/webpack-production.config.js — progress — profile — colors",
    "dev-server": "webpack-dev-server — config node/webpack-dev-server.config.js — progress — colors — port 2992 — inline",
    "hot-dev-server": "webpack-dev-server — config node/webpack-hot-dev-server.config.js — hot — progress — colors — port 2992 — inline",
    "setup": "npm install -g nodemon; npm install -g babel-cli; npm install -g forever",
    "b": "npm run build",
    "t": "npm run test"
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.2",
    "deep-merge": "^1.0.0",
    "express": "^4.x",
    "extend": "^3.0.0",
    "gulp": "^3.9.1",
    "jquery": "^2.2.0",
    "jquery-ui": "1.10.4",
    "jquery.cookie": "^1.4.1",
    "jquery.scrollto": "^2.1.2",
    "querystring": "^0.2.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "redis": "^2.6.0-2",
    "request": "^2.72.0",
    "striptags": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-remove-console": "^6.8.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-react": "^6.0.0",
    "babel-watch": "^2.0.0",
    "css-loader": "^0.16.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.8.4",
    "nodemon": "^1.9.2",
    "source-map-support": "^0.4.15",
    "style-loader": "^0.12.3",
    "webpack": "^2.6.0",
    "webpack-bundle-tracker": "^0.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "compact": false,
    "plugins": []
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sefaria/Sefaria-Project"
  },
  "bugs": {
    "url": "https://github.com/Sefaria/Sefaria-Project/issues"
  },
  "keywords": [
    "torah",
    "talmud",
    "free culture"
  ],
  "license": "GPL-3.0"
}
